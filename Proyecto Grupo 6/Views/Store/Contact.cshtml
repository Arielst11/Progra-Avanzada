<!-- Titulo e imagen -->
<section class="breadcrumb-section set-bg" data-setbg="/WebItems/img/banner.JPG">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Contactanos</h2>
                    <div class="breadcrumb__option">
                        @Html.ActionLink("Inicio", "index", "Store", new { area = "" }, new { @class = "nav-link" })
                        <span>Contáctenos</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Titulo e imagen fin -->
<!-- Contacto iconos -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_phone"></span>
                    <h4>Teléfono</h4>
                    <p>888888888888</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_pin_alt"></span>
                    <h4>Dirección</h4>
                    <p>San José Costa Rica</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_clock_alt"></span>
                    <h4>Horario</h4>
                    <p>10:00 am - 9:00 pm</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_mail_alt"></span>
                    <h4>Correo</h4>
                    <p>correo@ejemplo</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contacto iconos  fin -->
<!-- Map Begin -->
